<!--pages/list-market/create/create.wxml-->
<view class="app">
  <mp-toptips msg="{{error}}" type="error" show="{{error}}"></mp-toptips>
  <mp-form id="form" rules="{{rules}}" models="{{formData}}">
    <mp-cells ext-class="my-cells" title="基本信息">
      <mp-cell title="分组名">
        <input bindinput="formInputChange" data-field="title" class="weui-input" placeholder="请输入分组名" value="{{formData.title}}" />
      </mp-cell>
      <mp-cell link footer="{{formData.fileName}}" bindtap="onSelectGroupFile">
        <view slot="title">
          <view class="title">选择Excel文件</view>
          <view class="subtitle">(每列单词为一个分组)</view>
        </view>
      </mp-cell>
      <mp-cell title="分组数" footer="{{formData.listCount}}"></mp-cell>
      <mp-cell title="单词数" footer="{{formData.wordCount}}"></mp-cell>
    </mp-cells>
  </mp-form>
  <button class="weui-btn" type="primary" bindtap="submitForm">确定</button>
</view>