/* components/segment/index.wxss */
.segments-wrapper {
  padding: 4rpx;
  background-color: rgb(234, 234, 235);
  border-radius: 12rpx;
}

.segments {
  display: flex;
  justify-content: stretch;
  position: relative;
  padding: 12rpx 0;
  font-size: 30rpx;
  color: black;
  box-sizing: content-box;
}

.segments .segment {
  flex: 1;
  padding: 0 12rpx;
  border-right: 2rpx solid rgb(217, 216, 220);
  white-space: nowrap;
  overflow: hidden;
  /* text-overflow: ellipsis; */
  /* overflow: hidden;
  line-clamp: 1; */
  z-index: 2;
}

.segments .segment.selected {
  border-right: 2rpx solid rgb(234, 234, 235);
}

.segments .overlay {
  position: absolute;
  top: 0;
  height: 100%;
  padding: 12rpx;
  background-color: #fff;
  color: #fff;
  border-right: 2rpx solid #fff;
  border-radius: 12rpx;
  box-sizing: border-box;
  z-index: 1;

  transition-property: left;
  transition-duration: 0.25s;
  transition-timing-function: ease-in;
  transition-delay: 0ms;
}